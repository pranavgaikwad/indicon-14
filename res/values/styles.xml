<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">

        <!-- API 14 theme customizations can go here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="popupMenuStyle">@style/PopupStyle</item>
        <item name="actionOverflowButtonStyle">@style/overflowButton</item>
        <item name="textAppearanceLargePopupMenu">@style/DropDownText</item>
        <item name="textAppearanceSmallPopupMenu">@style/DropDownText</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:height">60dp</item>
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
    </style>
    
    <style name="overflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="PopupStyle" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TitleBarTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="DropDownText" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu">
        <item name="android:textColor">#4c4c4c</item>
    </style>

</resources>